<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">SignUp on AirWorld</h2>
        <div class="col-6 offset-3">
            <form method="POST" action="/signup" class="needs-validation" novalidate>
                <div class="mt-3">
                    <lable for="username" class="form-label">Username</lable>
                    <input type="text" class="form-control" name="username" id="username" required>
                    <div class="valid-feedback"> Looks good! </div>
                </div>

                <div class="mt-3">
                    <lable for="email" class="form-label">Email</lable>
                    <input type="email" class="form-control" name="email" id="email" required>
                    <!-- <div class="valid-feedback"> Looks good! </div> -->
                </div>

                <div class="mt-3">
                    <lable for="password" class="form-label">Password</lable>
                    <input type="password" class="form-control" name="password" id="password" required>
                    <!-- <div class="valid-feedback"> Looks good! </div> -->
                </div><br><br>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>  